  <a href="/article/{{id}}">
    <div class="card-body">
        <h5 class="card-title">{{title}}</h5>

        <div class="card-text">
            <p>by {{author_name}} on {{publish_date}}</p>
            <p>{{post_content}}</p>
        </div>
    </div>
  </a>
</section>
</div>
