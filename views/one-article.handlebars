<div class="col-12">
    <h2>{{article.title}}</h2>
    <h3>by {{article.author_name}} on {{article.publish_date}}</h3>
    <h6>{{article.post_content}}</h6>
    <hr>
    <p>Comments:</p>

    {{#each article.comments as |comment| }}
    {{>comment }}
    {{/each}}

    {{#if logged_in}}
        <form class="form comment-form">
            <div class="form-group">
                <label for="commentInput">Make your own comment here: </label>
                <textarea class="form-control" id="commentInput" rows="3"></textarea>
            </div>

            <div class="form-group">
                <button class="btn btn-primary" data-id="{{article.id}}" id="submit-comment" type="submit">
                COMMENT
                </button>
            </div>
        </form>
    {{/if}}
<script src="/js/comment.js"></script>
</div>

